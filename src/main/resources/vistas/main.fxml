<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Point3D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<BorderPane fx:id="root"
            prefHeight="1080.0"
            prefWidth="1920.0"
            style="-fx-background-color: #282c34;"
            xmlns="http://javafx.com/javafx17.0.15"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.hss.gui.controladores.MainController">

<stylesheets>
    <URL value="@../css/estilo.css"/>
</stylesheets>

    <top>
        <ToolBar prefHeight="30.0" prefWidth="1920.0"
                 style="-fx-background-color: #21252b;"
                 BorderPane.alignment="CENTER">
            <items>
                <HBox spacing="16.0">
                    <Button fx:id="btnClose" onAction="#handleClose"
                            style="-fx-background-radius: 30;
                                   -fx-background-color: #ff5f56;
                                   -fx-min-width: 30px;
                                   -fx-min-height: 30px;" />
                    <Button fx:id="btnMinimize" onAction="#handleMinimize"
                            style="-fx-background-radius: 30;
                                   -fx-background-color: #ffbd2e;
                                   -fx-min-width: 30px;
                                   -fx-min-height: 30px;" />
                    <Button fx:id="btnMaximize" onAction="#handleMaximize"
                            style="-fx-background-radius: 30;
                                   -fx-background-color: #27c93f;
                                   -fx-min-width: 30px;
                                   -fx-min-height: 30px;" />
                    <rotationAxis>
                        <Point3D />
                    </rotationAxis>
                </HBox>

                <Pane HBox.hgrow="ALWAYS">
                    <children>
                        <Label layoutX="80.0" layoutY="1.0" prefHeight="30.0" prefWidth="180.0"
                               text="File" textFill="WHITE">
                            <font>
                                <Font name="JetBrains Mono Thin" size="24.0" />
                            </font>
                        </Label>
                    </children>
                </Pane>

                <Button style="-fx-background-color: transparent;" fx:id="analyzeButton" onAction="#handleAnalyze">
                    <graphic>
                        <ImageView fx:id="runIcon" fitHeight="1.0" fitWidth="1.0"/>
                    </graphic>
                </Button>

                <Button style="-fx-background-color: transparent;" onAction="#handlePreview">
                    <graphic>
                        <ImageView fx:id="previewIcon" fitHeight="24.0" fitWidth="24.0" />
                    </graphic>
                </Button>

                <MenuButton textFill="white"
                    text=""
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    fx:id="menuButton">
                    <graphic>
                        <ImageView fx:id="menuIcon" fitHeight="24.0" fitWidth="24.0" />
                    </graphic>
                    <items>
                        <MenuItem text="Nuevo archivo" />
                        <MenuItem text="Abrir archivo" />
                        <MenuItem text="Guardar archivo" />
                    </items>
                    <font>
                        <Font name="JetBrains Mono Light" size="16.0" />
                    </font>
                </MenuButton>
            </items>
        </ToolBar>
    </top>

    <right>
        <VBox fx:id="previewPane" prefWidth="800.0" style="-fx-background-color: #ffffff;" BorderPane.alignment="CENTER"/>
    </right>

    <bottom>
        <VBox>
            <ToolBar prefHeight="25.0" prefWidth="1920.0"
                     style="-fx-background-color: #21252b;"
                     BorderPane.alignment="CENTER">
                <items>
                    <Button fx:id="btnToggleInputConsole"
                            onAction="#toggleInputConsole"
                            style="-fx-background-color: transparent;">
                        <graphic>
                            <ImageView fx:id="inputIcon" fitHeight="24.0" fitWidth="24.0" />
                        </graphic>
                    </Button>
                </items>
            </ToolBar>

            <HBox fx:id="inputConsole"
                  visible="false" managed="false"
                  spacing="10"
                  style="-fx-background-color: #282c34; -fx-padding: 10;">
                <TextArea fx:id="inputTextArea"
                          prefHeight="100.0"
                          prefWidth="1800.0"
                          wrapText="true"
                          style="-fx-control-inner-background: #282c34;
                                 -fx-text-fill: white;
                                 -fx-font-family: 'JetBrains Mono';
                                 -fx-font-size: 14px;" />

                <Button text="âœ–"
                        onAction="#closeInputConsole"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: white;
                               -fx-font-size: 18px;" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>